
<div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
    <div class="app-header header-shadow">
        <div class="app-header__logo">
                <h2>Manager</h2>
    </div>

     <p id="notice"><%= notice %></p>

  <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
					    <h2><b>Projects</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="projects/new"  class="btn btn-success" data-toggle="modal"><span>Add New Project </span></a>
					</div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Show</th>
                        <th>Edit</th>
                        <th>Add Remove users</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                  <% @projects.each do |project| %>
                    <tr>
                      <td class="w-25 p-3"><%= project.title %></td>
                      <td><%= project.description %></td>
                      <td><%= link_to 'Show', project_path(project), class: "show" %></td>
                      <td><%= link_to 'Edit', edit_project_path(project), class: "edit" %></td>
                      <td><%= link_to 'Add remove users', edit_users_list_project_path(project), class: "edit" %></td>
                      <td><%= button_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>
    </div>
   </div>
  <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
 </div>
</div>
